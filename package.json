{
  "name": "@bitk/root",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "^5.7.2",
      "zod": "^4.3.6"
    }
  },
  "scripts": {
    "dev": "bun --filter @bitk/api --filter @bitk/frontend dev",
    "dev:api": "bun --filter @bitk/api dev",
    "dev:frontend": "bun --filter @bitk/frontend dev",
    "build": "bun --filter @bitk/frontend build",
    "start": "bun --filter @bitk/api start",
    "test": "bun --parallel --filter '*' test",
    "test:api": "bun --filter @bitk/api test",
    "test:frontend": "bun --filter @bitk/frontend test",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "format": "biome format . --write",
    "format:check": "biome format . --check",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:reset": "bun apps/api/src/db/reset.ts",
    "compile": "bun scripts/compile.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@bitk/tsconfig": "workspace:*",
    "drizzle-kit": "^0.31.9",
    "typescript": "catalog:"
  }
}
